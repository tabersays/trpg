<%- model_class = Character -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:hp) %></th>
      <th><%= model_class.human_attribute_name(:mp) %></th>
      <th><%= model_class.human_attribute_name(:ep) %></th>
      <th><%= model_class.human_attribute_name(:str) %></th>
      <th><%= model_class.human_attribute_name(:dex) %></th>
      <th><%= model_class.human_attribute_name(:spd) %></th>
      <th><%= model_class.human_attribute_name(:con) %></th>
      <th><%= model_class.human_attribute_name(:end) %></th>
      <th><%= model_class.human_attribute_name(:min) %></th>
      <th><%= model_class.human_attribute_name(:sol) %></th>
      <th><%= model_class.human_attribute_name(:lv) %></th>
    </tr>
  </thead>
  <tbody>
    <% @characters.each do |character| %>
      <% if character.user == current_user %>
        <tr>
        <td><%= link_to character.name, character_path(character) %></td>
        <td><%= character.hp %></td>
        <td><%= character.mp %></td>
        <td><%= character.ep %></td>
        <td><%= character.str %></td>
        <td><%= character.dex %></td>
        <td><%= character.spd %></td>
        <td><%= character.con %></td>
        <td><%= character.end %></td>
        <td><%= character.min %></td>
        <td><%= character.sol %></td>
        <td><%= character.lv %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_character_path(character), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      character_path(character),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_character_path,
            :class => 'btn btn-primary' %>
