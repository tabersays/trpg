  <div class="control-group">
    <%= f.label :sol, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sol, :class => 'form-control' %>
    </div>
    <%= error_span(@character[:sol]) %>
  </div>

  <% end %>
</div>
  <div class="control-group">
    <strong><p>Please choose an avatar for you character. If left blank a default image will be used </p></strong>
    <div class="controls">
      <%= f.file_field :uploaded_file, :class => 'btn-default'%>
    </div>
  </div>
<br>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            characters_path, :class => 'btn btn-default' %>

<% end %>
